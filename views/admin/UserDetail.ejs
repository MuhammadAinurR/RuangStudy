<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
    <style>
        *{
            font-family: 'Nunito';
        }

        form{
            padding: 20px;
        }

        .card-container{
            /* box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px; */
            box-shadow: rgba(14, 30, 37, 0.12) 0px 2px 4px 0px, rgba(14, 30, 37, 0.32) 0px 2px 16px 0px;
            padding: 20px;
        }

        .container-card-detail{
            /* background-color: aqua; */
            display: flex;
            flex-direction: row;
            gap: 2%;
            justify-content: center;
            margin-top: 10px;
            
        }

        .card-detail{
            padding: 20px;
            min-width: 48%;
            box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
        }
    </style>
</head>

<body>
    <%- include('./partial/navbar') %>

    <div class="container mt-4">
        <h1 style="font-weight: 600; text-align: center;">User Detail</h1>
        <hr>
        <div style="display: flex; justify-content: center;">
            <div class="container-table" style="width: 70%;">
                <div class="card card-container">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" id="name" name="name" class="form-control" style="border-color: black;" value="<%= user.UserProfile.name %>" disabled><br>
                    <label for="email" class="form-label">Email</label>
                    <input type="text" id="email" name="email" class="form-control" style="border-color: black;" value="<%= user.email %>" disabled><br>
                    <label for="address" class="form-label">Address</label>
                    <input type="text" id="address" name="address" class="form-control" style="border-color: black;" value="<%= user.UserProfile.address %>" disabled><br>
                    <label for="pob" class="form-label">Place of Birth</label>
                    <input type="text" id="pob" name="pob" class="form-control" style="border-color: black;" value="<%= user.UserProfile.pob %>" disabled><br>
                    <label for="dob" class="form-label">Date of Birth</label>
                    <input type="date" id="dob" name="dob" class="form-control" style="border-color: black;" value="<%= user.UserProfile.formatDob %>" disabled><br>
                    <label for="phoneNumber" class="form-label">Phonbe Number</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" class="form-control" style="border-color: black;" value="<%= user.UserProfile.phoneNumber %>" disabled><br>
                    <label for="lastEducation" class="form-label">Last Education</label>
                    <input type="text" id="lastEducation" class="form-control" style="border-color: black;" value="<%= user.UserProfile.lastEducation %>" disabled><br>
                </div>
                <div class="card card-container mt-4">
                    <h4>Courses</h4>
                    <div class="container-card-detail">
                        <% user.Courses.forEach((e) => { %>
                         <div class="card card-detail">
                            <p style="color: rgb(160, 167, 167);"><%= e.Category.name %></p>
                            <h5><%= e.name %></h5>
                         </div>
                        <% }) %> 
                    </div>
                </div>
                <div style="height: 150px;"></div>
            </div>
        </div>
    </div>


</body>

</html>