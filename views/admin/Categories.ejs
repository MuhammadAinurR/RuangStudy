<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">
    <style>
        *{
            font-family: 'Nunito';
        }
        
        th,tr, td {
            text-align: center;
            align-content: center;
        }
    </style>
</head>

<body>
    <%- include('./partial/navbar') %>

    <div class="container mt-4">
        <h1 style="font-weight: 600; text-align: center;">Categories List</h1>
        <hr>
        <div>
            <form action="" style="display: flex; flex-direction: row; gap: 20px;">
                <input type="text" name="search" placeholder="Search by Category Name" class="form-control" style="border-color: black;">
                <button class="btn btn-secondary" style="width: 180px;">Search</button>
            </form>
        </div>
        <hr>
        <div style="display: flex; justify-content: center;">
            <div class="container-table" style="width: 100%;">
                <% if (msg) { %>
                 <div class="card" style="background-color: rgb(201, 245, 201); padding: 20px; padding-bottom: 0; margin-bottom: 10px;">
                    <p style="color: green;"><%= msg %></p>
                 </div>
                <% } %>
                <a href="/admin/categories/add" class="btn btn-outline-success">Add Category</a>
                <table class="table table-light table-bordered table-striped table-hover mt-3">
                    <thead>
                      <tr>
                        <th scope="col"style="width: 80px;">No.</th>
                        <th scope="col">Category Name</th>
                        <th scope="col" style="width: 150px;">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% categories.forEach((e, i) => { %>
                            <tr>
                              <th scope="row" ><%= i + 1 %></th>
                              <td><%= e.name %></td>
                              <td>
                                <a href="/admin/categories/<%= e.id %>/courses">
                                    <button class="btn btn-outline-primary">See Courses</button>
                                </a>
                              </td>
                            </tr>
                        <% }) %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>


</body>

</html>